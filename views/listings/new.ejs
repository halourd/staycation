<title>Add new Listing | Tootle</title>
<% layout('/layouts/boilerplate') -%>
    
    <form class="row g-3 container" action="/listings" method="post">
        <h1 class="">Add a Listing</h1>
        <div class="col-md-6">
          <label for="name" class="form-label">Name</label>
          <input type="text" name="name" class="name form-control" id="inputEmail4" required>
        </div>
        <div class="col-md-6">
          <label for="address" class="form-label">Address</label>
          <input type="text" name="address" class="form-control" id="address" required>
        </div>
        <div class="col-12">
          <label for="description" class="form-label">Description</label>
          <textarea name="description" class="form-control" id="description" cols="100" rows="10"></textarea>
        </div>

        <div class="col-12">
          <button type="submit" class="btn btn-primary px-4">Add</button>
          <a href="/listings" class="btn btn-danger">Cancel</a>
        </div>
      </form>
