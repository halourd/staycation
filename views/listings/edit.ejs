<title>Edit - <%= list_item.name%> | Tootle</title>
<% layout('/layouts/boilerplate') -%>
    
    <form class="row g-3 container" action="/listings/<%= list_item._id %>?_method=PUT" method="post">
        <h1 class="">Edit Listing</h1>
        <div class="col-md-6">
          <label for="name" class="form-label">Name</label>
          <input type="text" name="name" class="name form-control" id="inputEmail4" value="<%= list_item.name %>" required>
        </div>
        <div class="col-md-6">
          <label for="address" class="form-label">Address</label>
          <input type="text" name="address" class="form-control" id="address" value="<%= list_item.address %>" required>
        </div>
        <div class="col-12">
          <label for="description" class="form-label">Description</label>
          <textarea name="description" class="form-control" id="description" cols="100" rows="5"><%=list_item.description %></textarea>
        </div>

        <div class="col-12">
          <button type="submit" class="btn btn-success px-5">Save</button>
          <a href="/listings/<%= list_item._id %>" class="btn btn-danger px-5">Cancel</a>
        </div>
      </form>

